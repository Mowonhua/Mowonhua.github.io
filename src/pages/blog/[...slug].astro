---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { getEffectiveUpdatedDateMinute } from '../../utils/blogDates';
import { truncateToMinute } from '../../utils/datetime';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content, headings } = await render(post);

const pubDateMinute = truncateToMinute(post.data.pubDate);
const effectiveUpdatedDate = await getEffectiveUpdatedDateMinute(post);
---

<BlogPost {...post.data} pubDate={pubDateMinute} updatedDate={effectiveUpdatedDate} headings={headings}>
	<Content />
</BlogPost>
