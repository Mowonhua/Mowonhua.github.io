<button type="button" class="back-to-top" aria-label="返回顶部" title="返回顶部">
	↑
</button>

<script is:inline>
	const backToTopButton = document.querySelector('.back-to-top');
	backToTopButton?.addEventListener('click', () => {
		try {
			window.scrollTo({ top: 0, behavior: 'smooth' });
		} catch {
			window.scrollTo(0, 0);
		}
	});
</script>

<style>
	.back-to-top {
		position: fixed;
		right: 1rem;
		bottom: 1rem;
		z-index: 50;

		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 44px;
		height: 44px;
		border-radius: 999px;

		border: 1px solid rgb(var(--gray-light));
		background: #fff;
		color: rgb(var(--gray-dark));
		box-shadow: var(--box-shadow);

		font-size: 18px;
		line-height: 1;
		cursor: pointer;
		user-select: none;
	}

	.back-to-top:hover {
		color: var(--accent);
		border-color: var(--accent);
	}

	.back-to-top:focus-visible {
		outline: 2px solid var(--accent);
		outline-offset: 2px;
	}

	@media (max-width: 720px) {
		.back-to-top {
			right: 0.75rem;
			bottom: 0.75rem;
		}
	}
</style>
