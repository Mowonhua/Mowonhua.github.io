---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<div class="search-wrapper">
				<input type="text" id="search-input" placeholder="Search..." autocomplete="off" />
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="search-icon"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
			</div>
			<ThemeToggle />
			<a href="https://github.com/mowonhua" target="_blank">
				<span class="sr-only">Go to Mowon's GitHub repo</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--header-bg);
		box-shadow: var(--header-shadow);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--nav-link-color);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
		align-items: center;
	}
	.search-wrapper {
		position: relative;
		display: flex;
		align-items: center;
		margin-right: 1em;
	}
	#search-input {
		padding: 0.5em 0.5em 0.5em 2em;
		border: 1px solid rgba(var(--gray), 0.2);
		border-radius: 20px;
		font-size: 0.9em;
		width: 200px;
		transition: all 0.2s ease;
	}
	#search-input:focus {
		outline: none;
		border-color: var(--accent);
		box-shadow: 0 0 0 2px rgba(var(--accent), 0.2);
	}
	.search-icon {
		position: absolute;
		left: 0.5em;
		width: 1.2em;
		height: 1.2em;
		color: rgb(var(--gray));
		pointer-events: none;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
<script>
	const searchInput = document.getElementById('search-input');
	if (searchInput instanceof HTMLInputElement) {
		const urlParams = new URLSearchParams(window.location.search);
		const q = urlParams.get('q');
		if (q && window.location.pathname.match(/^\/blog\/?$/)) {
			searchInput.value = q;
		}

		searchInput.addEventListener('input', (e) => {
			if (e.target instanceof HTMLInputElement) {
				const query = e.target.value;
				window.dispatchEvent(new CustomEvent('search-updated', { detail: { query } }));
			}
		});

		searchInput.addEventListener('keydown', (e) => {
			if (e.key === 'Enter') {
				if (!window.location.pathname.match(/^\/blog\/?$/)) {
					window.location.href = `/blog?q=${encodeURIComponent(searchInput.value)}`;
				}
			}
		});
	}
</script>
